# API base URL override (highest priority for both dev and prod)
EXPO_PUBLIC_API_URL=https://ai-kaburlu-backend.onrender.com/api/v1

# Dev-only API base URL (used when __DEV__ and EXPO_PUBLIC_API_URL not set)
EXPO_PUBLIC_API_URL_DEV=https://ai-kaburlu-backend.onrender.com/api/v1

# Prod-only API base URL (used for release builds when EXPO_PUBLIC_API_URL not set)
EXPO_PUBLIC_API_URL_PROD=https://ai-kaburlu-backend.onrender.com/api/v1

# Force mock data usage (overrides offline-first behavior)
# Set to 'false' (or remove) to call the real backend
EXPO_PUBLIC_FORCE_MOCK=false

# Show developer-only features (e.g., debug card) when true
# Can also be toggled at runtime via long-press on Account title
# EXPO_PUBLIC_DEVELOPER_MODE=false

# Optional: enable HTTP debug logs to see base URL and each request
# EXPO_PUBLIC_HTTP_DEBUG=true

# Optional: customize HTTP timeout (milliseconds)
# EXPO_PUBLIC_HTTP_TIMEOUT_MS=20000