{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  "lib": ["esnext", "dom"],
  "types": ["react", "react-native"],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "app",
    "components",
    "services",
    "context",
    "hooks",
    "config",
    "constants",
    "icons",
    "data",
    "types",
    "scripts/**/*.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "node_modules.old",
    "node_modules_broken*",
    "build",
    "android",
    "ios",
    "*.config.js",
    "babel.config.js",
    "metro.config.js"
  ]
}
